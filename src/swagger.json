        }
    },
    "tags":[
        {
            "name": "Users",
            "description": "User management."
        }
    ],
    "paths": {  
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "This route create a user.",
                "description": "This route have responsibility create a new user.",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Full name of the user.",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Valid email of the user.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "description": "Name to be created.",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "Email to be created.",
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Mark",
                                    "email": "mark.example@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean",
                                            "default": "false"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "default": "User already exists."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "This route show all users created.",
                "description": "This route will to show all users create, if id_user informed on header to be of an admin.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "required": true,
                        "description": "user_id of the an admin user.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "schema": {
                    "type": "string"
                },
                "responses": {
                    "200": {
                        "description": "Profile user showded.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "admin": {
                                                "type": "boolean",
                                                "default": "false"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        },
                                        "example": {
                                            "id": "3b12c4b3-e971-4aef-9350-076c0139f318",
                                            "admin": true,
                                            "name": "Mark Zuckerberg",
                                            "email": "mark.facebook@meta.com",
                                            "created_at": "2022-08-10T23:33:50.027Z",
                                            "updated_at": "2022-08-10T23:42:01.859Z"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User not exists or don't have permission.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "default": "This user don't have permission for it."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "This route turn the user on admin.",
                "description": "This route turn the user on admin when send your id_user.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "ID of user that needs to be updated",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Properity: 'admin' updated for true.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not exists.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "default": "User not exists."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "This route show a profile user.",
                "description": "This route show a profile user based on user_id informed.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "ID of user that will to be showded",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profile user showded.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "default": "User not found."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}